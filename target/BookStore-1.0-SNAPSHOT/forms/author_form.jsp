<form action="add_author" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-3">Name: </label>
        <div class="col-sm-9">
            <input type="text" name="name" class="form-control"/>
        </div><!-- End of col-sm-9 -->
    </div><!-- End of form group -->
    <div class="form-group">
        <label class="control-label col-sm-3">Biography </label>
        <div class="col-sm-9">
            <input type="text" name="bio" class="form-control"/>
        </div><!-- End of col-sm-9 -->
    </div><!-- End of form group -->
    <div class="form-group">
        <label class="control-label col-sm-3">Date Of Birth </label>
        <div class="col-sm-9">
            <input type="text" name="dob" class="form-control"/>
        </div><!-- End of col-sm-9 -->
    </div><!-- End of form group -->
    <div class="form-group">
        <label class="control-label col-sm-3"></label>
        <div class="col-sm-9">
            <input type="submit"value="Add Author"class="btn pull-right"style="background-color: #1b6d85;color: white;"/>
        </div><!-- End of col-sm-9 -->
    </div><!-- End of form group -->
</form>
